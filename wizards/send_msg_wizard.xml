<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="send_msg_wizard_form_view" model="ir.ui.view">
            <field name="name">Gửi lịch hẹn</field>
            <field name="model">send_msg_wizard</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <separator string="Chọn lịch hẹn"/>
                        <field name="schedule_examine_ids" nolabel="1" context="{'sick_persion': True}" domain="[('re_examine_date', '>', context_today().strftime('%Y-%m-%d')), ('state', '=', 'waiting')]">
                            <tree>
                                <field name="sick_persion_id" context="{'sick_persion': True}"/>
                                <field name="re_examine_date"/>
                                <field name="type"/>
                                <field name="name"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </sheet>
                    <footer>
                        <button string='Gửi' name="btn_confirm_send" type="object" class="btn-primary"/>
                        <button string="Hủy" class="btn-danger" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_send_msg_wizard" model="ir.actions.act_window">
            <field name="name">Gửi lịch hẹn</field>
            <field name="res_model">send_msg_wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>